# Smart Plant Health Assistant - Environment Configuration
# Copy this file to .env and fill in actual values
# IMPORTANT: NEVER commit .env to version control!
# All sensitive data must be in environment variables, not hardcoded

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# OPENAI API CONFIGURATION (REQUIRED)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TIMEOUT=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# SQLite (development)
DATABASE_URL=sqlite:///plant_health.db

# PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/plant_health

# ============================================================================
# CORS & SECURITY CONFIGURATION
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
SESSION_COOKIE_SECURE=False
# Set SESSION_COOKIE_SECURE=True in production with HTTPS

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE_MB=10
IMAGE_QUALITY=95

# ============================================================================
# AI ANALYSIS CONFIGURATION
# ============================================================================
AI_CONFIDENCE_THRESHOLD=50.0
AI_HEALTH_CRITICAL=20.0
AI_HEALTH_POOR=40.0

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
AUTH_ENABLED=True
GUEST_MODE_ENABLED=True
SESSION_LIFETIME=604800

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# RATE LIMITING CONFIGURATION (Optional)
# ============================================================================
RATELIMIT_ENABLED=False
RATELIMIT_STORAGE_URL=memory://

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_TIMEOUT=30

# ============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ============================================================================
# Before deploying to production:
# 1. Generate a secure SECRET_KEY using: python -c "import secrets; print(secrets.token_hex(32))"
# 2. Set FLASK_ENV=production
# 3. Use PostgreSQL instead of SQLite
# 4. Set SESSION_COOKIE_SECURE=True (requires HTTPS)
# 5. Use environment variables from a secure vault (AWS Secrets Manager, Azure Key Vault, etc.)
# 6. Set LOG_LEVEL=WARNING to reduce noise
# 7. Enable RATELIMIT_ENABLED=True for API protection
# 8. Test database connections and backups
# 9. Set up proper error logging and monitoring

